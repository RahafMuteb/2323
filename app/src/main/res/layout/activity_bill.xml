<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/backgroundlogimg"
        tools:context=".LocketInfoActivity">

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:cardCornerRadius="16dp"
            android:elevation="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="20dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Payment Info"
                        android:textColor="#003482"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/alike_angular" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:text="Booking time"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBookingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="50dp"
                            android:text="2 hours "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="12 SAR"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="VAT"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvVat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:text="3 SAR"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:src="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Total"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:text="15 SAR"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/alike_angular"

                            />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Enter card details :"
                        android:textColor="#373A40"
                        android:textSize="20sp"
                        app:fontFamily="@font/alike_angular"

                        />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/img_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/editCardNumber"
                            android:layout_width="265dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="55dp"
                            android:hint="Card Number"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="#FFFF"
                            android:textColorHint="@color/white" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Expiry(MM)"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#FFFF"
                                android:textColorHint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:padding="10dp"
                                android:text="/"
                                android:textColor="#FFFF"
                                android:textSize="21dp" />

                            <EditText
                                android:id="@+id/editExpiryDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="YY"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#FFFF"
                                android:textColorHint="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editCardHolder"
                                android:layout_width="207dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Card Holder Name"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#FFFF"
                                android:textColorHint="@color/white" />

                            <EditText
                                android:id="@+id/editCVV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:hint="CVV"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="#FFFF"
                                android:textColorHint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnBook"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Pay"
            android:backgroundTint="#FFFF"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#003482"
            app:cardCornerRadius="16dp"
            app:fontFamily="@font/alike_angular"
            android:textAllCaps="false" />
    </RelativeLayout>
</layout>