<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smallogo"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />


        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/Image"
            android:text="LockerName"
            android:textColor="@color/material_dynamic_neutral_variant0"
            android:textSize="20sp"
            app:fontFamily="@font/alike_angular" />

        <TextView
            android:id="@+id/line"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="-7dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:text="_________________________________"
            android:textColor="#8f9193"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:text="Location"
            android:textColor="@color/material_dynamic_neutral50"
            android:textSize="14sp"
            app:fontFamily="@font/alike_angular" />


        <TextView
            android:id="@+id/textViewLockers"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:text="Number of locker"
            android:textColor="@color/material_dynamic_neutral50"
            android:textSize="14sp"
            app:fontFamily="@font/alike_angular"/>

        <TextView
            android:id="@+id/textViewCapacity"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLockers"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="1dp"
            android:inputType="number"
            android:text="Available locker "
            android:textColor="@color/material_dynamic_neutral50"
            app:fontFamily="@font/alike_angular" />

        <!-- Add a "Next" button to navigate to the next activity (SeatBookingActivity) -->
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_below="@+id/textViewCapacity"
            android:layout_marginStart="260dp"
            android:layout_marginTop="-1dp"
            android:background="@android:color/transparent"
            app:icon="@drawable/ic_baseline_east_24"
            app:iconTint="#0449B2 " />

        <!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <com.github.clans.fab.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/buttonNext"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_baseline_east_24"
                    app:fab_showShadow="true"
                    app:fab_colorNormal="@color/blue"
                    app:fab_size="mini"/>


        </RelativeLayout>-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>

